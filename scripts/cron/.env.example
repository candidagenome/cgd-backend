# CGD Cron Scripts Environment Variables
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control

# =============================================================================
# Database Configuration (Required)
# =============================================================================

# Oracle/PostgreSQL database connection URL
# Format: oracle+oracledb://user:password@host:port/service_name
# or: postgresql://user:password@host:port/database
DATABASE_URL=oracle+oracledb://cgd_user:your_password@localhost:1521/ORCL

# Database schema name (default: MULTI)
DB_SCHEMA=MULTI

# =============================================================================
# Project Configuration
# =============================================================================

# Project acronym (CGD or AspGD)
PROJECT_ACRONYM=CGD

# Project URL
PROJECT_URL=http://www.candidagenome.org

# Project root directory
PROJECT_ROOT=/var/www/cgd

# HTML root directory for download files
HTML_ROOT_DIR=/var/www/html

# Data directory for intermediate files
DATA_DIR=/var/data/cgd

# Log directory
LOG_DIR=/var/log/cgd

# Temporary directory
TMP_DIR=/tmp

# =============================================================================
# Email Configuration
# =============================================================================

# Curator email for notifications
CURATOR_EMAIL=curator@candidagenome.org

# Admin email (From address for notifications)
ADMIN_EMAIL=admin@candidagenome.org

# Sendmail path (for legacy scripts)
SENDMAIL=/usr/sbin/sendmail

# =============================================================================
# reCAPTCHA Configuration (check_recaptcha.py)
# =============================================================================

# Google reCAPTCHA site key (public)
RECAPTCHA_PUBLIC_KEY=your_recaptcha_public_key_here

# Google reCAPTCHA secret key (private)
RECAPTCHA_PRIVATE_KEY=your_recaptcha_private_key_here

# =============================================================================
# GBrowse MySQL Configuration (load_gbrowse_mysql.py)
# =============================================================================

# MySQL host for GBrowse databases
GBROWSE_MYSQL_HOST=localhost

# MySQL username for GBrowse
GBROWSE_MYSQL_USER=gbrowse_user

# MySQL password for GBrowse
GBROWSE_MYSQL_PASSWORD=your_mysql_password_here

# GBrowse data directory
GBROWSE_DATA_DIR=/var/www/cgd/html/gbrowse2/databases

# GBrowse config directory
GBROWSE_CONF_DIR=/var/www/cgd/conf/gbrowse2.conf

# Path to bp_bulk_load_gff.pl script
BULK_LOADER_PATH=/var/www/cgd/bin/bp_bulk_load_gff.pl

# =============================================================================
# Wusage Transfer Configuration (wusage_transfer.py)
# =============================================================================

# Wusage admin username
WUSAGE_ADMIN_USER=cgdadmin

# Wusage destination host
WUSAGE_DEST_HOST=fafner

# =============================================================================
# PubMed/Reference Configuration (load_pubmed_references.py)
# =============================================================================

# NCBI API key (optional, increases rate limit)
NCBI_API_KEY=your_ncbi_api_key_here

# NCBI email (required for E-utilities)
NCBI_EMAIL=your_email@example.com

# =============================================================================
# GO Annotation Configuration (load_go.py, transferGo, etc.)
# =============================================================================

# GO OBO file URL
GO_DOWNLOAD_URL=https://ontology-build.geneontology.org/go.obo

# =============================================================================
# BioGRID Configuration (update_biogrid_xref.py)
# =============================================================================

# BioGRID REST API access key
BIOGRID_ACCESS_KEY=your_biogrid_access_key_here

# =============================================================================
# BLAST Dataset Configuration (create_blast_datasets.py)
# =============================================================================

# Directory for BLAST database files
BLAST_DATASET_DIR=/var/data/cgd/blast_datasets

# Path to BLAST+ binaries (makeblastdb)
BLAST_BIN_PATH=/usr/local/ncbi/blast/bin

# =============================================================================
# Website Archive Configuration (archive_website.py)
# =============================================================================

# Base URL for HTML pages
HTML_ROOT_URL=http://www.candidagenome.org/

# Base URL for CGI scripts
CGI_ROOT_URL=http://www.candidagenome.org/cgi-bin/

# =============================================================================
# Admin User (for database audit trails)
# =============================================================================

# Admin username for database operations
ADMIN_USER=admin

# =============================================================================
# Ortholog File Configuration (generate_ortholog_file_db_strains.py)
# =============================================================================

# Default orthology method name
ORTHOLOGY_METHOD=inparanoid

# =============================================================================
# GO Slim Configuration (dump_go_slim_annotation.py)
# =============================================================================

# Default genus for GO Slim set (e.g., Candida, Aspergillus)
DEFAULT_GENUS=Candida

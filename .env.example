# CGD Backend Environment Configuration
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

ENV_STATE=dev
LOG_LEVEL=INFO

# --- JWT Authentication ---
# IMPORTANT: Set a stable secret key. If not set, a random key is generated
# on each restart, invalidating all existing user sessions.
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# --- Oracle database ---
ORACLE_USER=
ORACLE_PASSWORD=
ORACLE_DSN=oracle+oracledb://USER:PASSWORD@HOST:1521/SERVICENAME
DB_SCHEMA=MULTI
DATABASE_URL=oracle+oracledb://USER:PASSWORD@HOST:1521/?service_name=SERVICENAME

# --- GBrowse MySQL (for load_gbrowse_mysql.py) ---
GBROWSE_MYSQL_HOST=localhost
GBROWSE_MYSQL_USER=
GBROWSE_MYSQL_PASSWORD=
GBROWSE_CONF_DIR=/opt/cgd/conf/gbrowse2.conf
GBROWSE_DATA_DIR=/opt/cgd/html/gbrowse2/databases
BP_BULK_LOAD_SCRIPT=/opt/cgd/bin/bp_bulk_load_gff.pl

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

CURATOR_EMAIL=
ADMIN_EMAIL=admin@localhost
SMTP_HOST=localhost
SMTP_PORT=25

# Email for NCBI E-utilities (required by NCBI)
NCBI_EMAIL=admin@candidagenome.org

# =============================================================================
# PROJECT SETTINGS
# =============================================================================

PROJECT_NAME=cgd
PROJECT_ACRONYM=CGD

# =============================================================================
# DIRECTORY PATHS
# =============================================================================

LOG_DIR=/var/log/cgd
DATA_DIR=/var/data/cgd
TMP_DIR=/tmp
HTML_DIR=/var/www/html
HTML_ROOT_DIR=/var/www/html
CACHE_DIR=/var/www/html/cache
WEB_LOG_DIR=/var/log/httpd

# =============================================================================
# URL CONFIGURATION
# =============================================================================

HTML_ROOT_URL=http://localhost/
CGI_ROOT_URL=http://localhost/cgi-bin/

# =============================================================================
# EXTERNAL API KEYS (SENSITIVE)
# =============================================================================

# --- reCAPTCHA (for check_recaptcha.py) ---
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=

# =============================================================================
# WUSAGE TRANSFER (for wusage_transfer.py)
# =============================================================================

WUSAGE_ADMIN_USER=cgdadmin
WUSAGE_DEST_HOST=fafner
WUSAGE_DEST_DIR=wusage
WUSAGE_SRC_DIR=/var/log/httpd

# =============================================================================
# PATHWAY TOOLS (for check_ptools.py)
# =============================================================================

PTOOLS_TEST_URL=http://localhost/cgi-bin/pathway/pathway.pl?object=_SUBSTITUTE_THIS_
PTOOLS_TEST_PATHWAY=POLYAMSYN-YEAST-PWY
PTOOLS_RESTART_CMD=/etc/init.d/pathway restart
PTOOLS_TIMEOUT=60

# =============================================================================
# BLAST CONFIGURATION (for create_blast_datasets.py, update_seq_search_files.py)
# =============================================================================

BLAST_DIR=/data/blast
BLAST_DATASET_DIR=/data/blast_datasets
BLAST_FORMAT_CMD=makeblastdb
# JSON file mapping source files to dataset names (optional)
SEQUENCE_FILES_CONFIG=

# =============================================================================
# FASTA/PATMATCH CONFIGURATION (for update_seq_search_files.py)
# =============================================================================

FASTA_DIR=/data/fasta

# =============================================================================
# BIOGRID CONFIGURATION (for update_biogrid_xref.py)
# =============================================================================

BIOGRID_API_KEY=
BIOGRID_API_URL=https://webservice.thebiogrid.org/interactions

# =============================================================================
# NCBI CONFIGURATION
# =============================================================================

NCBI_FTP_URL=ftp://ftp.ncbi.nih.gov/
